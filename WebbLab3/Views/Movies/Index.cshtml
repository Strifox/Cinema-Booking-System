@model IEnumerable<WebbLab3.Movie>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.MovieName)</th>
            <th> @Html.DisplayNameFor(model => model.MovieDateTime)</th>
            <th> @Html.DisplayNameFor(model => model.Salon)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    
                    @Html.DisplayFor(modelItem => item.MovieName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MovieDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salon.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MovieName">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MovieName">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MovieName">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

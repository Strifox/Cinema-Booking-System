@model WebbLab3.Booking

@{
    ViewData["Title"] = "Edit";
}

<h2>Book Tickets Now</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Showing.Movie.MovieName" class="control-label"></label>
                <select asp-for="Showing.Movie.MovieName" class="form-control" asp-items="ViewBag.ShowingBookingId"></select>
                <span asp-validation-for="Showing.Movie.MovieName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tickets" class="control-label"></label>
                <input asp-for="Tickets" class="form-control" value="0"/>
                <span asp-validation-for="Tickets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Book now" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="BookTickets">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



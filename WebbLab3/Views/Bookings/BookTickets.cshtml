@model IEnumerable<WebbLab3.Booking>
@{
    ViewData["Title"] = "BookTickets";
}

<h2>BookTickets</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Showing.MovieDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Showing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tickets)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Showing.Salon)
            </th>
            <th>
                Book Tickets
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Showing.MovieDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Showing.Movie.MovieName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tickets)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Showing.Salon.SalonName)
                </td>
                <td>
                    <a class="btn btn-default" asp-area="" asp-controller="Bookings" asp-action="BookNow/1">Book Now</a>
                </td>
            </tr>
        }
    </tbody>
</table>
